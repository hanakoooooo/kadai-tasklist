<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content %> <br>
  </div>
  
  <div>
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status %> <br>
  </div>

  <%= f.submit '登録' %>
<% end %>
